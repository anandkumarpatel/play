{
  "name": "play",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "generate-pwa-assets": "pwa-assets-generator -p minimal-2023",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy:clean": "npm run docker -- kill ${NAME}; npm run docker -- rm ${NAME} || true",
    "deploy:clean-images": "npm run ssh -- 'docker rmi $(docker images -f \"dangling=true\" -q)' || true",
    "deploy:build": "npm run docker -- build -t ${NAME}:v1 .",
    "deploy": "npm run deploy:build && npm run cleanStart && npm run deploy:clean-images && npm run logs",
    "cleanStart": "npm run deploy:clean && npm run docker -- run --name ${NAME} -v ./db:/usr/src/app/db --restart=always -p 80:3000 -d ${NAME}:v1",
    "docker": "docker -H ssh://ubuntu@${API_BOX}",
    "logs": "npm run docker -- logs ${NAME} -f --tail ${LOGS:-10}",
    "ssh": "ssh ubuntu@${API_BOX}"
  },
  "dependencies": {
    "@gfazioli/mantine-flip": "^1.0.23",
    "@mantine/core": "^7.14.3",
    "@mantine/hooks": "^7.14.3",
    "@mantine/notifications": "^7.14.3",
    "@tanstack/react-router": "^1.84.2",
    "@tanstack/router": "^0.0.1-beta.53",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vite-pwa/assets-generator": "^0.2.6",
    "@eslint/js": "^9.15.0",
    "@tanstack/router-devtools": "^1.84.2",
    "@tanstack/router-plugin": "^1.83.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "postcss": "^8.4.49",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.0.1",
    "vite-plugin-pwa": "^0.21.1"
  }
}
