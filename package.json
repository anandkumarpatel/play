{
  "name": "play",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "generate-pwa-assets": "pwa-assets-generator -p minimal-2023",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy:clean": "npm run docker -- kill ${NAME}; npm run docker -- rm ${NAME} || true",
    "deploy:clean-images": "npm run ssh -- 'docker rmi $(docker images -f \"dangling=true\" -q)' || true",
    "deploy:build": "npm run docker -- build -t ${NAME}:v1 .",
    "deploy": "npm run deploy:build && npm run cleanStart && npm run deploy:clean-images && npm run logs",
    "cleanStart": "npm run deploy:clean && npm run docker -- run --name ${NAME} -v ./db:/usr/src/app/db --restart=always -p 80:3000 -d ${NAME}:v1",
    "docker": "docker -H ssh://ubuntu@${API_BOX}",
    "logs": "npm run docker -- logs ${NAME} -f --tail ${LOGS:-10}",
    "ssh": "ssh ubuntu@${API_BOX}"
  },
  "dependencies": {
    "@gfazioli/mantine-flip": "^2.3.3",
    "@mantine/core": "^8.2.5",
    "@mantine/hooks": "^8.2.5",
    "@mantine/notifications": "^8.2.5",
    "@tanstack/react-router": "^1.131.25",
    "@tanstack/router": "^0.0.1-beta.53",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tanstack/router-devtools": "^1.131.25",
    "@tanstack/router-plugin": "^1.131.25",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vite-pwa/assets-generator": "^1.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-pwa": "^1.0.2"
  }
}
